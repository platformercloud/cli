{
  "name": "platformer-cli",
  "description": "Command Line Interface for the Platformer Console",
  "version": "0.1.11",
  "author": "binura.g@platformer.com, chamod.p@platformer.com",
  "bin": {
    "platformer": "./bin/run"
  },
  "bugs": "https://github.com/platformercloud/cli/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^3",
    "@sentry/node": "^6.2.0",
    "@sentry/tracing": "^6.2.0",
    "chalk": "^4.1.0",
    "cli-ux": "^5.5.0",
    "conf": "^7.1.2",
    "inquirer": "^7.3.3",
    "js-yaml": "^3.14.0",
    "listr2": "^3.2.3",
    "lookpath": "^1.1.0",
    "node-fetch": "^2.6.1",
    "node-fetch-har": "^1.0.1",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "rxjs": "^6.6.3",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4",
    "@types/inquirer": "^7.3.1",
    "@types/js-yaml": "^3.12.5",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/node-fetch": "^2.5.7",
    "chai": "^4",
    "eslint": "^5.13",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "globby": "^10",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.1",
    "mocha": "^5",
    "nyc": "^14",
    "prettier": "2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://platformercloud.github.io/cli/",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "platformer",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "cluster": {
        "description": "Manage and connect Kubernetes Clusters to the Platformer Console"
      },
      "context": {
        "description": "Manage Platformer CLI contexts"
      },
      "select": {
        "description": "Select and set the Organization, Project and Environment in your context"
      }
    },
    "macos": {
      "identifier": "com.platformer.cli"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/platformercloud/cli.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "postinstall": "patch-package",
    "postpack": "rimraf oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rimraf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "prettier-format": "prettier \"{src,public,docs}/**/*.{js,ts,tsx,json}\" --config .prettierrc --write",
    "watch": "tsc -w",
    "preversion": "oclif-dev readme && git add README.md",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --write"
    ]
  },
  "types": "lib/index.d.ts"
}
